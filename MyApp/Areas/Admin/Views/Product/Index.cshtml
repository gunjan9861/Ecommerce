@model MyApp.Models.ViewModel.ProductVM
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Products</h2>

        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp;Create New Product</a>
        </div>
    </div>
</div>

<table id="myTable" class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                 Price
            </th>
            <th>
                Category
            </th>
            <th>
                Action
            </th>

        </tr>


    </thead>
    <tbody>
        @foreach(var product in Model.Products)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Category.Name</td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Product" asp-route-id="@product.Id"> <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id"> <i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
   



</table>

@section scripts
{
    <script src="~/js/Product.js"></script>

}
